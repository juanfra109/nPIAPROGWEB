@model IEnumerable<PIA.Models.dbModels.Editoriale>

@{
    ViewData["Title"] = "Index";
}

<h1>Editoriales</h1>

<p>
    <button onclick="crear()">Crear Nuevo</button>
</p>
<table class="table tablasadmin">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Ideditorial"><button class="btn btn-success">Editar</button></a> |
                    <a asp-action="Details" asp-route-id="@item.Ideditorial"><button class="btn btn-info">Detalles</button></a> |
                    <a asp-action="Delete" asp-route-id="@item.Ideditorial"><button class="btn btn-danger">Eliminar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
<button onclick="atras()">Volver a pagina Admins</button>

<script>
    var link = 'https://localhost:7095';
    $(document).ready;
    function atras(){
        location.href = link+'/Home/Admin';
    }
    function crear() {
        location.href = link + '/Editoriales/Create';
    }
</script>