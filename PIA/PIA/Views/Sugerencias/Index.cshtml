@model IEnumerable<PIA.Models.dbModels.Sugerencia>

@{
    ViewData["Title"] = "Index";
}

<h1>Sugerencias</h1>


<table class="table tablasadmin">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Idsugerencia"><button class="btn btn-info">Detalles</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
<button onclick="atras()">Volver a pagina Admins</button>

<script>
    var link = 'https://localhost:7095';
    $(document).ready;
    function atras(){
        location.href = link+'/Home/Admin';
    }
</script>