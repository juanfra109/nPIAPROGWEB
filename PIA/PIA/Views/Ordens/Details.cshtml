@model PIA.Models.dbModels.Orden

@{
    Layout = null;
}

<html>
    <head>
        <title>Orden #@Model.Idorden</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <h1 class="text-center">Orden #@Model.Idorden</h1>
        <p>Fecha: @Model.Fecha.ToString("g")</p>
        <br/><br/>
    <table class="table tablasadmin">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio unitario</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detalle in Model.Ordendetalles) {
                    <tr>
                        <td>@detalle.IdlibrosNavigation.Nombre</td>
                        <td>@detalle.Cantidad</td>
                        <td>@((detalle.Precio / detalle.Cantidad).ToString("C"))</td>
                        <td>@detalle.Precio.ToString("C")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th colspan="3">@Model.Total.ToString("C")</th>
                </tr>
            </tfoot>
        </table>
        <script>
            document.addEventListener("DOMContentLoaded", function(event) { 
              window.print();
            });
        </script>
    </body>
</html>